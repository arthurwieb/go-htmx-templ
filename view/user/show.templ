package user

import (
	"github.com/arthurwieb/got/view/layout"
	"github.com/arthurwieb/got/model"
	"github.com/arthurwieb/got/view/components"
)

func getAuthenticatedUser(c context.Context) string {
	user, ok := c.Value("user").(string)
	if !ok {
		return ""
	}
	return user
}

templ Show(user model.User) {
	<h1>Hello { getAuthenticatedUser(ctx) }</h1>
	@layout.Base() {
		<h1>hello from user page</h1>
		@components.Input(components.InputProps{
			Typ:  "email",
			Name: "email",
		})
	}
}
